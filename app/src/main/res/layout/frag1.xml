<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bmhanna"
        android:gravity="center_horizontal|center_vertical"
        android:text="분석 필요 기업"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#050505"
        android:textColorHighlight="#8E821C"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal|center_vertical">

        <EditText
            android:id="@+id/companyname"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/searching"
            android:ems="15"
            android:inputType="text"
            android:padding="5dp"

            />

        <Button
            android:id="@+id/resultButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:foreground="@drawable/serchicon" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="308dp">

        <TextView
            android:id="@+id/text_myungun"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fontFamily="@font/bmhanna"
            android:padding="10dp"
            android:text="text_myungun"
            android:textColor="#000000"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_person"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/bmhanna"
            android:gravity="right|end"
            android:padding="10dp"
            android:text="text_person"
            android:textColor="#000000"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>