<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="20dp"
            android:text="분석 필요 기업"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#050505"
            android:fontFamily="@font/bmhanna"
            android:textColorHighlight="#8E821C"
            android:textSize="15sp"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|center_vertical">

        <EditText
            android:id="@+id/companyname"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/searching"
            android:ems="15"
            android:inputType="text"
            android:padding="5dp"

            />

        <Button
            android:id="@+id/resultButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:foreground="@drawable/serchicon" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_gravity="center"

            android:background="@drawable/myungun"
            android:fontFamily="@font/bmhanna"
            android:padding="10dp"


            >

            <TextView
                android:id="@+id/text_myungun"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fontFamily="@font/bmhanna"
                android:padding="10dp"
                android:text="fadfa"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_person"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/bmhanna"

                android:gravity="right|bottom"
                android:text="sadfasdf"
                android:textColor="#000000"
                android:textSize="10sp"
                android:visibility="visible" />






        </LinearLayout>



    </LinearLayout>

</LinearLayout>